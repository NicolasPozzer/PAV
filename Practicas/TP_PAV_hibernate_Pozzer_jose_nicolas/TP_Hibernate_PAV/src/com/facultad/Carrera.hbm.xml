<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false" package="com.facultad">
  <class name="Carrera" table="carreras">
    <id name="id" type="java.lang.Integer">
      <column name="id"/>
      <generator class="identity"/>
    </id>
    <property name="nombre"></property>
    <many-to-one column="facultadId" name="unaFacultad" cascade="none"  />    
    <!-- uno a muchos -->
    <list name="lista_materias" cascade="all-delete-orphan" lazy="true"> 
        <key column="id_materia" />
        <index column="orden"/>
        <one-to-many class="Materia" /> 
    </list>    
  </class>
</hibernate-mapping>
