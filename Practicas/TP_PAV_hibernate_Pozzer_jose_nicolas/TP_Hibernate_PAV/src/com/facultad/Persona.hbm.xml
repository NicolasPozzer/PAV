<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.facultad" default-lazy="false">
  <class name="Persona" abstract="true">
    <id name="dni">
      <generator class="assigned"/>
    </id>
    <property name="apellido"></property>
    <property name="nombre"></property>
    <property name="fecha_nacimiento"></property>
    <many-to-one column="ciudadId" name="unaCiudad" cascade="none"  />
    
    <union-subclass name="Alumno" table="alumno" >            
            <property name="nro_legajo"/>
            <property name="anio_ingreso"/>
        </union-subclass>
        
        <union-subclass name="Profesor" table="profesor" >
            <property name="antiguedad"/>
        </union-subclass>
  </class>
</hibernate-mapping>
